id: widget_gallery
file_type: screen

import:
  - ../Templates/main_panel.yui
  - ../Templates/back_button.yui
  
// TODO: /Widgets/*
  - ../Widgets/switcher.yui
  - ../Widgets/checkbox.yui
  - ../Widgets/dropdown_menu.yui
  - ../Widgets/menu.yui

resources:
  widget_wrapper:
    type: template


root:

  type: panel
  padding: 30
  spacing: 10
  
  elements:
    - type: back_button

    - type: panel
      data_source: @widget_data

      elements:

        - type: text
          text: Checkbox
          text_style: subtitle

        - type: checkbox
          is_checked: @check_state
          label: this is a checkbox
          on_checked_changed: >> yui_set_struct_value(@, check_state, not @check_state)
          //? on_checked_changed: @is_checked = not @is_checked

        - type: text
          text: Switcher
          text_style: subtitle

        - type: switcher
          items: @switcher_items
          selection_scope: @switcher_selector
          selected_index: 1

        - type: text
          text: Dropdown Selector
          text_style: subtitle

        - type: dropdown_menu
          items: @switcher_items
          selection_scope: @switcher_selector
