file_type: resources

resources:

  checkbox:
    type: template

    slots:
      // whether the checkbox is currently checked
      // (you should bind this)
      is_checked: false

      // sprite to use as the checkmark when checked
      check_icon: yui_icon_check_mark

      // what size the check icon should be
      check_icon_size: 16

      // (blend) color to use for the checkmark and text
      foreground: white

      // label for the checkbox
      label: null

      // handler for when the check state changes
      // (this should update whatever is_checked is bound to)
      on_checked_changed: null

    template:

      type: button
      bg_color: #00000000
      on_click: $on_checked_changed
      content:

        type: panel
        layout: horizontal
        elements:

          - type: border
            border_color: $foreground
            border_thickness: 1
            padding: 1
            content:

              type: image
              visible: $is_checked
              sprite: $check_icon
              size: $check_icon_size
              blend_color: $foreground

          - type: text
            text: [$label, " - ", $is_checked]
            color: $foreground