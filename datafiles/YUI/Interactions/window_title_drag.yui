id: window_title_drag
file_type: interaction
type: drag_and_drop

drag:
  condition: null
  center_visual: false

  visual: null

  action: @source.data.set_position(@cursor.x - @cursor.relative_x, @cursor.y - @cursor.relative_y)

drop:
  condition: null  
  visual: null
  action: yui_log('window drag finished')

on_cancel: yui_log('interaction window_title_drag was cancelled')