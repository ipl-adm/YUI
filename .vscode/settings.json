{
    "editor.wordWrap": "on",
    "files.associations": {
        "*.ui": "json",
        "*.yui": "yui",
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
    },
    "workbench.tree.indent": 12,
    "color-highlight.languages": [
        "yaml",
        "yui"
    ],
    "color-highlight.markerType": "background",
    "color-highlight.matchWords": true,
    "color-highlight.markRuler": true
}